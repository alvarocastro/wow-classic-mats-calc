{{#unless this.isHidden}}
<li class="list-group-item d-flex justify-content-between align-items-center py-1 px-2 {{unless @visible "opacity-50"}}">
  <ItemLink
    @id={{@item.id}}
    @name={{@item.name}}
  />
  {{#if @input}}
  <input
    class="form-control form-control-sm text-center w-10 p-0"
    type="number"
    placeholder="0"
    value={{@amount}}
    tabindex={{this.tabindex}}
    {{on "input" this.handleInput}}
  />
  {{else}}
  <button
    type="button"
    class="btn btn-{{if @visible "light" "secondary"}} btn-sm w-10"
    tabindex={{this.tabindex}}
    {{on "click" (if @visible this.hide this.show)}}
  >
    <Icon @name={{if @visible "visible" "hidden"}} />
  </button>
  {{/if}}
</li>
{{/unless}}
